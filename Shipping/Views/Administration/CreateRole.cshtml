@model CreateRoleViewModel

@{
    ViewData["Title"] = "Create New Role";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h2 class="m-0 text-center font-weight-bold text-secondary">اضافه مجموعة</h2>
    </div>
    <div class="card-body">
        <form asp-controller="Administration" asp-action="CreateRole" method="post">
            <div class="row">
                <div class="form-group col-md-12 p-1 d-flex align-items-right ">
                    <label asp-for="RoleName">اسم المجموعة : </label>
                    <input asp-for="RoleName" class="form-control col-4 me-3" />
                </div>

                <div class="col-4">
                    <span asp-validation-for="RoleName" class="text-danger mb-2"></span>
                    <button type="submit" class="btn btn-outline-success col-6 mx-2">اضافة</button>
                    <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-secondary col-3">إلغاء</a>
                </div>
            </div>
        </form>
    </div>
</div>