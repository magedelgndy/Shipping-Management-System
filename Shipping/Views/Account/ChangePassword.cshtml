@model ChangePasswordViewModel 
@{
    ViewData["Title"] = "Change Password";

}
<div class="row card shadow m-2">
    <div class="card-header py-3">
        <h2 class="m-0 text-center font-weight-bold text-secondary">تغيير الرقم السري</h2>
    </div>
    <div class="card-body col-md-12 ">
        <form asp-controller="Account" asp-action="ChangePassword" method="post">
            <div asp-validation-summary="All" class="text-danger col-md-12"></div>

            <div class="d-flex flex-wrap p-5" style="height:30vh;">
                <div class="form-group col-md-4 p-3 ">
                    <label class="form-label m-2">الرقم السري الحالى</label>
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4 p-3">
                    <label class="form-label m-2">الرقم السري الجديد</label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4 p-3">
                    <label class="form-label m-2">تاكيد الرقم السري</label>
                    <input asp-for="ConfirmNewPassword" class="form-control" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>
            </div>
                <div class="d-flex justify-content-end px-3 mb-3">
                    <button type="submit" class="btn btn-outline-success col-2 mx-2">تغيير</button>
                    <a asp-controller="State" asp-action="Index" class="btn btn-secondary col-1">إلغاء</a>
                </div>
        </form>
    </div>
</div>