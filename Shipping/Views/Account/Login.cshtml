


@model Shipping.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";

}
<div class="container ">

    <!-- Outer Row -->
    <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body d-flex flex-wrap ">
                        <!-- Nested Row within Card Body -->
                            <div class="col-lg-6 justify-content-end " style="width:50%">
                                <div class="p-5">
                                    <div class="text-center ">
                                    <h1 class="h4 text-gray-900 mb-4 font-weight-bold">تسجيل الدخول</h1>
                                    </div>
                                    <form asp-action="Login">
                                        <div class="form-group justify-content-end">
                                            <label class="control-label">البريد الالكترونى</label>
                                            <input asp-for="Email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">الرقم السري</label>
                                            <input asp-for="Password" class="form-control" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group form-check mt-3 m-3">
                                            <label class="form-check-label">
                                                تذكرنى
                                                <input class="form-check-input" asp-for="RememberMe" />
                                            </label>

                                        </div>

                                        <div class="form-group float-start">
                                            <input type="submit" value="  دخول  " class="btn btn-outline-primary" />
                                        </div>
                                       
                                    </form>
                                   
                                </div>
                            </div>
                    <div class="d-flex justify-content-center align-items-center " style="width:50%">
                                <img src="/img/pioneers.png" />
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}